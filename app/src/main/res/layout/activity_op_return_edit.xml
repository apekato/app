<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context="a.apkt.OpReturnEditActivity"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="15dp"
              android:paddingLeft="15dp"
              android:paddingRight="12dp"
              android:paddingTop="15dp">

    <FrameLayout
        android:id="@+id/activity_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar style="?android:attr/progressBarStyleLarge"
                     android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:layout_marginBottom="8dp" android:paddingTop="5dp"
                     android:layout_gravity="center"/>
    </FrameLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_tx_id_title"
                    android:text="@string/tv_tx_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_verify_notarization"
                    android:textColor="@color/gray_5"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_tx_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_tx_id_title"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:typeface="serif"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/tv_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_tx_id"
                    android:textColor="@color/gray_5"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_text_title"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:typeface="serif"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/tv_timestamp_title"
                    android:text="@string/tv_timestamp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_text"
                    android:textColor="@color/gray_5"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_timestamp_title"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:typeface="serif"
                    android:textIsSelectable="true" />

            </RelativeLayout>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>